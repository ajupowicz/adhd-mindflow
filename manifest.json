{
  "manifest_version": 3,
  "name": "ADHD MindFlow",
  "version": "1.3",
  "description": "Productivity tools: Pomodoro, Notes, Mini Games, and White Noise.",
  "icons": {
    "48": "CSS/icons/tomato-svgrepo-com.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Productivity Panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "CSS/icons/tomato-svgrepo-com.png",
        "sounds/white-noise.mp3",
        "game.html",
        "js/game.js",
        "CSS/gamestyle.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
